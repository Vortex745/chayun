<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xu.tea.mapper.CartMapper">

    <resultMap id="CartResultMap" type="com.xu.tea.entity.Cart">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="tea_id" property="teaId" />
        <result column="count" property="count" />
        <result column="create_time" property="createTime" />

        <association property="tea" javaType="com.xu.tea.entity.Tea">
            <id column="t_id" property="id"/>
            <result column="t_name" property="name"/>
            <result column="t_img_url" property="imgUrl"/>
            <result column="t_price" property="price"/>
            <result column="t_stock" property="stock"/>
        </association>
    </resultMap>

    <select id="selectByUserId" resultMap="CartResultMap">
        SELECT
            c.*,
            t.id AS t_id,
            t.name AS t_name,
            t.img_url AS t_img_url,
            t.price AS t_price,
            t.stock AS t_stock
        FROM t_cart c
                 LEFT JOIN t_tea t ON c.tea_id = t.id
        WHERE c.user_id = #{userId}
        ORDER BY c.create_time DESC
    </select>

    <select id="selectByUserIdAndTeaId" resultType="com.xu.tea.entity.Cart">
        SELECT * FROM t_cart
        WHERE user_id = #{userId} AND tea_id = #{teaId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_cart (user_id, tea_id, count, create_time)
        VALUES (#{userId}, #{teaId}, #{count}, NOW())
    </insert>

    <update id="updateCount">
        UPDATE t_cart SET count = #{count} WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM t_cart WHERE id = #{id}
    </delete>

</mapper>